<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>

    <!-- Prediction - Calendar view -->
    <record model="ir.ui.view" id="prediction_calendar_view">
      <field name="name">prediction.calendar</field>
      <field name="model">account.prediction</field>
      <field name="arch" type="xml">
	<calendar string="Previsions" date_start="start_date" color="category_id">
	  <field name="start_date" invisible="True"/>
	  <field name="predict_value"/>
	  <field name="category_id"/>
	</calendar>
      </field>
    </record>

    <!-- Prediction - Tree view -->
    <record model="ir.ui.view" id="prediction_tree_view">
      <field name="name">prediction.tree</field>
      <field name="model">account.prediction</field>
      <field name="arch" type="xml">
	<tree string="Predictions">
	  <field name="predict_value"/>
	</tree>
      </field>
    </record>

    <!-- Prediction - Form view -->
    <record model="ir.ui.view" id="prediction_form_view">
      <field name="name">prediction.form</field>
      <field name="model">account.prediction</field>
      <field name="arch" type="xml">
	<form string="Prediction">
	  <sheet>
	    <group>
	      <field name="name"/>
	      <field name="value"/>
	      <field name="account_id"/>
	      <field name="category_id"/>
	    </group>
	  </sheet>
	</form>
      </field>
    </record>

    <!-- Prediction - Action -->
    <record model="ir.actions.act_window" id="prediction_action">
      <field name="name">Prediction</field>
      <field name="res_model">account.prediction</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form,calendar</field>
    </record>

  </data>
</openerp>